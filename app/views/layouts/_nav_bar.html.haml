%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  %a.navbar-brand{:href => root_path} Admin
  %button.navbar-toggler{"data-target" => "#navbarToggler", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarToggler.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      %li.nav-item.active
        %a.nav-link{ :href => users_path }
          回到主页
          %span.sr-only (current)
      %li.nav-item
        %a.nav-link{ :href => users_path } 用户列表
      %li.nav-item.dropdown
        %a#navbarDropdown.nav-link.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "button"}
          用户列表
        .dropdown-menu
          %a.dropdown-item{ :href => users_path(gender: User::FEMALE) } 女用户
          %a.dropdown-item{ :href => users_path(gender: User::MALE) } 男用户
          .dropdown-divider
          %a.dropdown-item{ :href => users_path } 所有用户
      %li.nav-item
        %a.nav-link.disabled{ :href => "#", :tabindex => "-1" } 待添加
    %form.form-inline.my-2.my-lg-0
      %input.form-control.mr-sm-2{ :placeholder => "Search", :type => "search" }
      %button.btn.btn-outline-success.my-2.my-sm-0{ :type => "submit" } 查询用户
    %ul.navbar-nav.mr-0
      %li.nav-item.dropdown
        %a#admin-dropdown.nav-link.count-indicator{"data-toggle" => "dropdown", :href => "#"} 管理
        .dropdown-menu.navbar-dropdown.dropdown-menu-right{"aria-labelledby" => "admin-dropdown"}
          %a.dropdown-item{:href => super_user_path(current_user)}
            .sender-img
              %i.fa.fa-id-card
              %span.menu-title 查看个人信息
          %a.dropdown-item{:href => super_users_path}
            .sender-img
              %i.fa.fa-users
              %span.menu-title 查看所有管理员
          %a.dropdown-item{:id => 'logout', :href => "#"}
            .sender-img
              %i.fa.fa-sign-out
              %span.menu-title 退出登录
