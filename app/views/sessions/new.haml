.row.form-container
  .auth-form-light
    %h2 Login
    %h4.font-weight-light Ok! let's get started
    %form{:action => login_path, :method => "post", :name => "login-form"}
      .form-group
        %label{:for => "email"} Email
        %input.form-control{"aria-describedby" => "emailHelp", :placeholder => "Username", :type => "email", :id => "email", :name => "email"}/
      .form-group
        %label{:for => "password"} Password
        %input.form-control{:placeholder => "Password", :type => "password", :password => "password", :name => "password"}/
      .mt-5
        %button.btn.btn-lg.btn-success.btn-block{:name => "Submit", :type => "Submit", :value => "Login"} 登录

:css

  .form-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
